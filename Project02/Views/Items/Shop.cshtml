
@{
    ViewData["Title"] = "Shop";
    var items = (List<ItemModel>)ViewData["Items"];
}

<h1>Shop</h1>


<div class="row">

    @foreach (var item in items)
    {
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="@item.Image" height="250" width="250" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text">Price: @item.Price SR</p>
                <a href="~/Items/Details/@item.ID" class="btn" style="background-color: #b8c01f; ">More Details</a>
                <a href="#" class="btn" style="background-color: #b8c01f; ">Add to Cart</a>
                <a href="~/Items/Cart/@item.ID">Buy Now</a>

            </div>
        </div>
    }
</div>
