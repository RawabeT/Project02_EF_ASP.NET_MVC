@model Project01.Models.CustomerModel;
@{
    ViewData["Title"] = "Login";
}

<div class="login-view">

    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
    {

        <div class="container contact-form">
            <form method="post">
                <h3 id="Contact">Login</h3>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>@Html.LabelFor(m => m.Name)</label>
                            <label>@Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })</label>
                            <label>@Html.ValidationMessageFor(m => m.Name)</label>
                        </div>
                        <div class="form-group">

                            <label>@Html.LabelFor(m => m.Password)</label>
                            <label>@Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })</label>
                            <label>@Html.ValidationMessageFor(m => m.Password)</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <img width="200" height="160" src="@Url.Content("~/img/logo.png")" multiple />
                        </div>
                    </div>
                    <input type="submit" name="btnSubmit" class="btnContact" value="Login" />
                    <input type="reset" name="btnSubmit" class="btnContact" value="Reset" />
                    <p>New User? Click here to <a href="~/Home/Create" class="btn" style="color: #b8c01f; ">Register</a></p>
                </div>
            </form>
        </div>
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

</div>